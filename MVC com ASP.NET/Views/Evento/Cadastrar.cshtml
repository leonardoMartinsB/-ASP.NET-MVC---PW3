@model Evento

@{
    ViewData["Title"] = "Cadastrar Evento";
}

<h2 class="text-primary fw-bold text-center mb-4">Cadastrar Novo Evento</h2>

<form asp-action="Cadastrar" method="post" class="shadow p-4 rounded bg-white mx-auto">
    <div class="mb-3">
        <label class="form-label fw-bold">Nome do Evento</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do Evento" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Local</label>
        <input asp-for="Local" class="form-control" placeholder="Digite o local do Evento" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Data</label>
        <input asp-for="Data" class="form-control" type="datetime-local" required />
    </div>
    <button type="submit" class="btn btn-gradient w-100 mt-3">💾 Salvar</button>
    <a asp-action="Index" class="btn btn-secondary w-100 mt-2">❌ Cancelar</a>
</form>

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #1e3a8a, #9333ea);
        color: white;
        padding: 12px 20px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #9333ea, #1e3a8a);
            transform: scale(1.05);
        }

    form {
        max-width: 600px;
        margin: auto;
        background: #f8f9fa;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-size: 16px;
        color: #333;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 20px;
        border-radius: 25px;
        text-align: center;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>
