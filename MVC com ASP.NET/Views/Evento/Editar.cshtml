@model Evento

@{
    ViewData["Title"] = "Editar Evento";
}

<h2 class="text-primary text-center mb-4">Editar Evento</h2>

<form asp-action="Editar" method="post" class="shadow p-4 rounded bg-white mx-auto">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label fw-bold">Nome do Evento</label>
        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do Evento" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Local</label>
        <input asp-for="Local" class="form-control" placeholder="Digite o local do Evento" required />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Data</label>
        <input asp-for="Data" class="form-control" type="datetime-local" required />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary btn-lg">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancelar</a>
    </div>
</form>

<style>
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .shadow {
        max-width: 500px;
        margin: auto;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    h2 {
        font-weight: bold;
    }

    .form-label {
        font-size: 16px;
        color: #333;
    }

    .form-control {
        padding: 10px;
        font-size: 16px;
        border-radius: 5px;
    }
</style>
