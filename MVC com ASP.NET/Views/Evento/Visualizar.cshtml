@model Evento

@{
    ViewData["Title"] = "Detalhes do Evento";
}

<h2 class="text-center mb-4">Detalhes do Evento</h2>

<div class="card p-4 shadow-sm rounded">
    <ul class="list-unstyled">
        <li><strong>Nome do Evento:</strong> @Model.Nome</li>
        <li><strong>Data do Evento:</strong> @Model.Data.ToString("dd/MM/yyyy")</li>
        <li><strong>Local do Evento:</strong> @Model.Local</li>
    </ul>
</div>

<a asp-action="Index" class="btn btn-primary d-block mx-auto mt-4">Voltar</a>

<style>
    h2 {
        font-size: 28px;
        font-weight: bold;
        color: #007bff;
    }

    .card {
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .list-unstyled li {
        font-size: 18px;
        margin-bottom: 10px;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 12px 20px;
        font-size: 16px;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
