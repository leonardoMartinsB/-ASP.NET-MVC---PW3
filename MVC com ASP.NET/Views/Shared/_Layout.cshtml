<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Meu Sistema</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        :root {
            --primary-color: #1e3a8a;
            --secondary-color: #9333ea;
            --light-color: #f3f4f6;
            --dark-color: #111827;
        }

        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background-color: var(--light-color);
            color: var(--dark-color);
            font-family: 'Arial', sans-serif;
        }

        .navbar {
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            padding: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

            .navbar a {
                color: white !important;
                font-weight: bold;
                transition: color 0.3s;
            }

                .navbar a:hover {
                    color: #facc15 !important;
                }

        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.5);
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        main {
            flex: 1;
            padding-top: 20px;
        }

        footer {
            background: var(--dark-color);
            color: white;
            text-align: center;
            padding: 15px;
            margin-top: 20px;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Sistema MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Carro" asp-action="Index">Carros</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Celular" asp-action="Index">Celulares</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Evento" asp-action="Index">Eventos</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Sistema MVC. Todos os direitos reservados.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
