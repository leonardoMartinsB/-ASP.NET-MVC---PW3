@model Carro

@{
    ViewData["Title"] = "Editar Carro";
}

<h2 class="text-primary text-center">Editar Carro</h2>

<form asp-action="Editar" method="post" class="shadow p-4 rounded bg-white">
    <input asp-for="Id" type="hidden" />

    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input asp-for="Marca" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Modelo</label>
        <input asp-for="Modelo" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Ano</label>
        <input asp-for="Ano" class="form-control" type="number" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">Salvar Alterações</button>
        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancelar</a>
    </div>
</form>

<style>
    .btn-success {
        background-color: #28a745;
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 12px 24px;
        border-radius: 25px;
        transition: 0.3s;
        font-weight: bold;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: scale(1.05);
        }

    .shadow {
        max-width: 500px;
        margin: auto;
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    h2 {
        font-weight: bold;
    }
</style>
