@model Carro

@{
    ViewData["Title"] = "Cadastrar Carro";
}

<h2 class="text-primary fw-bold">Cadastrar Novo Carro</h2>

<form asp-action="Cadastrar" method="post" class="shadow p-4 rounded bg-white">
    <div class="mb-3">
        <label class="form-label fw-bold">Marca</label>
        <input asp-for="Marca" class="form-control" placeholder="Digite a marca" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Modelo</label>
        <input asp-for="Modelo" class="form-control" placeholder="Digite o modelo" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Ano</label>
        <input asp-for="Ano" class="form-control" type="number" placeholder="Digite o ano" required />
    </div>
    <div class="mb-3">
        <label class="form-label fw-bold">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" placeholder="Digite o preço" required />
    </div>
    <button type="submit" class="btn btn-gradient">💾 Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">❌ Cancelar</a>
</form>

<style>
    .btn-gradient {
        background: linear-gradient(90deg, #1e3a8a, #9333ea);
        color: white;
        padding: 10px 20px;
        border-radius: 25px;
        transition: 0.3s;
        text-decoration: none;
        font-weight: bold;
    }

        .btn-gradient:hover {
            background: linear-gradient(90deg, #9333ea, #1e3a8a);
            transform: scale(1.05);
        }

    form {
        max-width: 500px;
        margin: auto;
        background: #f8f9fa;
    }
</style>
